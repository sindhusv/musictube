        <dropwizard.version>0.9.2</dropwizard.version>
        <lombok.version>1.16.2</lombok.version>
        <jmockit.version>1.8</jmockit.version>
        <junit.version>4.11</junit.version>
        <jgit.version>4.0.1.201506240215-r</jgit.version>
